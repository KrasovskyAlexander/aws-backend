{
    "openapi": "3.0.0",
    "info": {
      "version": "1.0.0",
      "title": "Products API",
      "description": "Product Service AWS"
    },
    "servers": [
      {
        "description": "aws service",
        "url": "https://ouj7efcqa2.execute-api.eu-west-1.amazonaws.com/dev/"
      }
    ],
    "paths": {
      "/products/{id}": {
        "get": {
          "summary": "Gets product by ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "description": "Gets product by ID",
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                "type": "object",
                  "schema": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            },
            "404": {
              "description": "Product not found"
            }
          }
        }
      },
      "/products": {
        "get": {
          "summary": "Gets all products",
          "responses": {
            "200": {
              "description": "OK",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Product"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "Product": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "price": {
              "type": "number"
            },
            "title": {
              "type": "string"
            },
            "img": {
              "type": "string"
            }
          }
        }
      }
    }
}
